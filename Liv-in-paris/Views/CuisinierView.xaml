<UserControl x:Class="Liv_in_paris.CuisinierView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />     <!-- Contenu principal -->
            <RowDefinition Height="Auto" />  <!-- Bouton de déconnexion -->
        </Grid.RowDefinitions>

        <!-- Scrollable contenu principal -->
        <ScrollViewer Grid.Row="0" Margin="10" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20" VerticalAlignment="Top">
                <TextBlock Text="👨‍🍳 Mes plats" FontSize="20" FontWeight="Bold" Margin="0 0 0 20"/>

                <!-- Liste des plats -->
                <ItemsControl ItemsSource="{Binding Plats}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0 0 0 10">
                                <StackPanel>
                                    <TextBlock Text="{Binding NomPlat}" FontWeight="Bold"/>
                                    <TextBlock Text="Prix par personne : " />
                                    <TextBlock Text="{Binding PrixParPersonne}"/>
                                    <TextBlock Text="Recette : " FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Recette.NomRecette}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Separator Margin="0 20 0 20"/>
                <TextBlock Text="➕ Ajouter un nouveau plat" FontWeight="Bold" FontSize="16" Margin="0 0 0 10"/>

                <!-- Formulaire -->
                <StackPanel>
                    <TextBox Margin="5" Text="{Binding NewNomPlat}" Tag="Nom du plat"
                             Foreground="Gray" GotFocus="RemovePlaceholder" LostFocus="AddPlaceholder"/>

                    <TextBox Margin="5" Text="{Binding NewPrixPlat}" Tag="Prix du plat"
                             Foreground="Gray" GotFocus="RemovePlaceholder" LostFocus="AddPlaceholder"/>

                    <TextBox Margin="5" Text="{Binding NewNomRecette}" Tag="Nom de la recette"
                             Foreground="Gray" GotFocus="RemovePlaceholder" LostFocus="AddPlaceholder"/>

                    <TextBox Margin="5" Text="{Binding NewIngredients}" Tag="Ingrédients"
                             Foreground="Gray" GotFocus="RemovePlaceholder" LostFocus="AddPlaceholder"/>

                    <TextBox Margin="5" Text="{Binding NewTypePlat}" Tag="Type (Entrée / Plat Principal / Dessert)"
                             Foreground="Gray" GotFocus="RemovePlaceholder" LostFocus="AddPlaceholder"/>

                    <TextBox Margin="5" Text="{Binding NewStyleCuisine}" Tag="Style Cuisine (entier)"
                             Foreground="Gray" GotFocus="RemovePlaceholder" LostFocus="AddPlaceholder"/>

                    <TextBox Margin="5" Text="{Binding NewRegime}" Tag="Régime Alimentaire (optionnel)"
                             Foreground="Gray" GotFocus="RemovePlaceholder" LostFocus="AddPlaceholder"/>

                    <Button Content="Ajouter" Margin="5" Command="{Binding AjouterPlatCommand}"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Bouton de déconnexion en bas à droite -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Se déconnecter"
                    Command="{Binding DeconnexionCommand}"
                    Background="LightGray"
                    Padding="10,5"
                    FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</UserControl>
