<Window x:Class="Liv_in_paris.Views.RoleSelectionPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Liv_in_paris.Views"
        mc:Ignorable="d"
        Title="Choisir un rôle" Height="200" Width="300" WindowStartupLocation="CenterScreen">
    
        <StackPanel Margin="20">
        <TextBlock Text="Choisissez un rôle :" FontWeight="Bold" Margin="0 0 0 10"/>
        <ComboBox x:Name="RoleComboBox" Margin="0 0 0 10"/>
        <Button Content="Valider" Click="Validate_Click"/>
        </StackPanel>
</Window>
